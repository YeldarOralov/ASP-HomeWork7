@model IEnumerable<HW7.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>News</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.ImagePath)" style="width:200px; height:200px"/>
        </td>
    </tr>
}

</table>
